.reviews-carousel {
  &__list {
    display: flex;
    will-change: transform;
    transition: transform .3s;
    max-width: 1000px;
    margin-left: 2.5%;
  }

  &__item {
    flex-shrink: 0;
    padding-right: 40px;
    width: 50%;

    &:last-child {
      margin-right: 0;
    }
  }
}

.VueCarousel-navigation {
  display: none;
}