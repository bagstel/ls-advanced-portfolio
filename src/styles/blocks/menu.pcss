/* Menu
============================================================================================ */
.menu {
  &__list {
    display: flex;
    align-items: center;
  }

  &__item {
    margin-right: 60px;

    &:last-child {
      margin-right: 0;
    }
  }

  &__link {
    display: flex;
    justify-content: center;
    align-items: center;
    color: $links-color;
    text-decoration: none;
    white-space: nowrap;

    &:hover,
    &:active {
      font-weight: 600;
    }
  }
}