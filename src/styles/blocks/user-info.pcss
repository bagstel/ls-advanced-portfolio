/* User info block
============================================================================================ */
.user-info {
  position: relative;

  &__desc span,
  &__username span {
    display: block;
  }

  &__desc {
    color: #a6afb9;
    font-size: 18px;
    font-weight: 600;
    line-height: 30px;
    text-align: center;
    margin-bottom: 23px;
  }

  &__username {
    color: $links-color;
    font-size: 72px;
    font-weight: 800;
    line-height: 60px;
  }
}