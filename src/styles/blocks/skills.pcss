.skills {

  &__list {
    display: flex;
    flex-wrap: wrap;
  }
  &__item {
    margin-right: 36px;
    margin-bottom: 20px;
    &:last-child {
      margin-right: 0;
    }
  }
  &__title {
    font-size: 24px;
    font-weight: 700;
    line-height: 48px;
    margin-bottom: 20px;
    margin-left: 8px;
  }
}