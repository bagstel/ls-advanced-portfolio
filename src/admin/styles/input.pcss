/* Form's elements
============================================================================================ */
.admin-form {
  &__input {
    color: $text-color;
    font-size: 18px;
    font-weight: 600;
    line-height: 36px;
    padding: 0;
    border: 0;
    border-bottom: 1px solid #1f232d;
    background: transparent;
    width: 100%;

    &::placeholder {
      color: rgba(currentColor, .8);
    }
  }
}

.admin-form__input--small {
  font-size: 16px;
  font-weight: normal;
}