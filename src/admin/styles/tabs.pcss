.tabs {
  &__list {
    display: flex;
    height: 77px;
  }

  &__item {
    margin-right: 30px;
    height: 100%;
  }

  &__btn {
    width: 125px;
    color: #414c63;
    line-height: 2;
    height: 100%;
    border-bottom: 3px solid transparent;

    &:hover {
      color: $links-active;
      font-weight: 600;
      border-color: currentColor;
    }
  }
}
