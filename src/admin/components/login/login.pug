.root-container.root-container--dark
  section.login
    .login__content
      .title.login__title Авторизация

      form.login__form.form--18.form--strong

        .login__row
          label(for="form_login").form__label.form__p-left Логин
          .form__input-wrap(:class="{'form__input--error': validation.hasError('reg.login')}")
            input(
              type="text",
              name="login",
              id="form_login",
              v-model="reg.login",
              placeholder="Terminator_2019").form__input.form__p-left
            .form__icon
              svg.form__icon--user
                use(xlink:href="sprite.svg#user")
          small.form__error {{ validation.firstError('reg.login') }}

        .login__row
          label(for="form_password").form__label.form__p-left Пароль
          .form__input-wrap(:class="{'form__input--error': validation.hasError('reg.password')}")
            input(
              type="password",
              name="password",
              id="form_password",
              v-model="reg.password",
              placeholder="•••••••••••••••••••••").form__input.form__p-left
            .form__icon
              svg.form__icon--key
                use(xlink:href="sprite.svg#key")
          small.form__error {{ validation.firstError('reg.password') }}

        .login__row
          .login__btn
            button(type="submit" @click.prevent="submit").btn.btn--feedback Отправить

