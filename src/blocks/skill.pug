- var gradientBeginColor = '#4a00ed';
- var gradientEndColor = '#9300e8';
- var strokeColor = '#e9e9e9';

mixin skill(percent, text)
  .skill
    svg(viewBox="0 0 100 100" fill="transparent").skill__svg-shape
      circle(cx="50" cy="50" r="40" fill="transparent" stroke= strokeColor stroke-width="6px")
      circle(cx="50" cy="50" r="40" stroke="url(#gradient)" transform="rotate(180 50 50)" stroke-dasharray="251" stroke-dashoffset=`${251 - (percent * 2.5)}` stroke-width="11px").skill__svg-circle-outline
      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
        stop(offset="0%" stop-color= gradientBeginColor)
        stop(offset="100%" stop-color= gradientEndColor)
    .skill__title #{text}