-
  var socials = ['insta', 'vk', 'github']

mixin socials(mod)
  <!-- Socials links -->
  div(class=`socials socials--${mod}`)
    ul.socials__list
      each social in socials
        li.socials__item
          a(href="#").socials__link
            +icon(social, `socials__icon socials__icon--${social}`)