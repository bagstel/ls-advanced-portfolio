-
  var menu = [
    {href: '#home', text: 'Главная'},
    {href: '#about', text: 'Обо мне' },
    {href: '#skills', text: 'Навыки' },
    {href: '#works', text: 'Работы' },
    {href: '#reviews', text: 'Отзывы' },
    {href: '#feedback', text: 'Связаться' }
  ]

mixin menu(mod)
  if (mod === 'header')
    <!-- Main menu -->
    nav(class=`menu menu--${mod}`)
      ul.menu__list
        each item, i in menu
          li.menu__item
            a(href= item.href, class=`menu__link ${i === 0 ? 'menu__link--active' : ''}`) #{item.text}
  else
    <!-- Menu -->
    div(class=`menu menu--${mod}`)
      ul.menu__list
        each item in menu
          li.menu__item
            a(href= item.href).menu__link #{item.text}